<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin"
    tools:context=".ProfilePage">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_baseline_account_circle_24"
        android:layout_gravity="center"
        ></com.google.android.material.imageview.ShapeableImageView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profilePage_txtNameSurnameLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ad Soyad"
        android:textColor="@color/primary"
        android:textSize="13sp"
        ></com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profilePage_txtNameSurnameText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        ></com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profilePage_txtMailLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="E-Posta Adresi"
        android:textColor="@color/primary"
        android:textSize="13sp"
        ></com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profilePage_txtMailText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        ></com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profilePage_txtPhoneLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Telefon Numarası"
        android:textColor="@color/primary"
        android:textSize="13sp"
        ></com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profilePage_txtPhoneText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        ></com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profilePage_txtCityLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Şehir"
        android:textColor="@color/primary"
        android:textSize="13sp"
        ></com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profilePage_txtCityText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        ></com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profilePage_Edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Bilgileri Düzenle"
        android:layout_gravity="center"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_baseline_create_24"
        app:iconPadding="-20dp"
        ></com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profilePage_CityChange"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Şehir Değiştir"
        android:layout_gravity="center"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_baseline_edit_location_24"
        app:iconPadding="-20dp"
        ></com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profilePage_Logout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Çıkış Yap"
        android:layout_gravity="center"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_baseline_exit_to_app_24"
        app:iconPadding="-20dp"
        ></com.google.android.material.button.MaterialButton>

</androidx.appcompat.widget.LinearLayoutCompat>